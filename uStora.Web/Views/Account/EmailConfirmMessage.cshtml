@{
    ViewBag.Title = "Kích hoạt bằng Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="breadcrumb-area">
    <div class="row">
        <div class="col-xs-12 col-md-6 custom-breadcrumb">
            <ol class="breadcrumb">
                <li><a href="/"> <i class="fa fa-home"></i> Trang chủ</a></li>
            </ol>
        </div>
    </div>
</div>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-content-right" id="tblCartTable">
                    <div class="woocommerce">
                        <section class="panel panel-info">
                            <div class="panel-heading">Kích hoạt tài khoản bằng Email</div>
                            <div class="panel-body">Cảm ơn bạn đã đăng ký tài khoản tại uStora. Để kích hoạt tài khoản vui lòng click vào link mà chúng tôi đã gửi vào email của bạn: @ViewBag.Email.</div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

