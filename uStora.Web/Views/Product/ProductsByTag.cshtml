@model uStora.Web.Infrastructure.Core.PaginationSet<uStora.Web.Models.ProductViewModel>

@{
    var tag = (uStora.Web.Models.TagViewModel)ViewBag.Tag;
    var pageIndex = Model.Page;
    ViewBag.Title = pageIndex == 1 ? "Sản phẩm theo tag " + tag.Name : "Sản phẩm theo tag " + tag.Name + " - Trang " + pageIndex;
    ViewBag.MetaKeyword = pageIndex == 1 ? "Sản phẩm theo tag " + tag.Name : "Sản phẩm theo tag " + tag.Name + " - Trang " + pageIndex;
    ViewBag.MetaDescription = pageIndex == 1 ? "Sản phẩm theo tag " + tag.Name : "Sản phẩm theo tag " + tag.Name + " - Trang " + pageIndex;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Tag "@tag.Name"</h2>
                    @if (Model.Count > 0)
                    {<p>@Model.TotalCount sản phẩm được tìm thấy.</p> }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="breadcrumb-area">
    <div class="row">
        <div class="col-xs-12 col-md-6 custom-breadcrumb">
            <ol class="breadcrumb">
                <li><a href="/"><i class="fa fa-home"></i> Trang chủ</a></li>
                <li class="active">Tag @tag.Name</li>
            </ol>
        </div>
        <div class="col-xs-12 col-md-6 custom-breadcrumb">

            <ul class="sortby-area">
                <li>Tìm theo:</li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        Giá<b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu sub-menu">
                        <li><a href="?page=@(Model.Page)&sort=discount">Khuyến mãi</a></li>
                        <li><a href="/products/tags-@(tag.ID).htm?page=@(Model.Page)&sort=price_asc">Thấp - Cao</a></li>
                        <li><a href="/products/tags-@(tag.ID).htm?page=@(Model.Page)&sort=price_des">Cao - Thấp</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                        Nhãn hiệu<b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu sub-menu">
                        @{Html.RenderAction("BrandsList", "Product"); }
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @if (Model.Count > 0)
            {
                foreach (var product in Model.Items)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="single-shop-product">
                            <div class="product-upper">
                                <img src="@product.Image" data-html="true" data-toggle="tooltip" title="@product.Description" alt="@product.Name">
                            </div>
                            <h2><a href="/product/@(product.Alias)-@(product.ID).htm">@product.Name</a></h2>
                            <div class="product-carousel-price">
                                @if (product.PromotionPrice.HasValue && product.PromotionPrice.Value != 0)
                                {
                                    <ins>@product.PromotionPrice.Value.ToString("c0")</ins>
                                    <del>@product.Price.ToString("c0")</del>
                                }
                                else
                                {
                                    <ins>@product.Price.ToString("c0")</ins>
                                }
                            </div>

                            <div class="product-option-shop">
                                <a href="#" id="btnAddToCart" data-id="@product.ID" class="add_to_cart_button">Thêm vào giỏ</a>
                                @if (Request.IsAuthenticated)
                                {
                                    <a href="javascript:void()" id="add_to_wishlist_button" class="add_to_wishlist_button" data-toggle="tooltip" title="Yêu thích"><i class="fa fa-heart" data-id="@product.ID" id="btnAddWishlist"></i></a>
                                }
                                else
                                {
                                    <a href="javascript:void()" id="add_to_wishlist_button" class="add_to_wishlist_button" data-toggle="tooltip" title="Yêu thích"><i class="fa fa-heart" data-id="@product.ID" id="btnAddWishlistDisable"></i></a>
                                }
                            </div>
                        </div>
                    </div>
                }

            }
            else
            {
                <h3 class="text-danger text-center">Không có sản phẩm nào.....<strong>@ViewBag.Keyword</strong></h3>
            }

        </div>
        @if (Model.TotalPages > 1)
        {
            // Create numeric links
            var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
            var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

            <nav class="text-center">
                <ul class="pagination">
                    @if (Model.Page > 1)
                {
                        <li>
                            <a href="?page=1" data-toggle="tooltip" title="Trang đầu" aria-label="First">
                                <i class="fa fa-angle-double-left"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@(Model.Page-1)" data-toggle="tooltip" title="Trang sau" aria-label="Previous">
                                <i class="fa fa-angle-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = startPageIndex; i <= endPageIndex; i++)
                {
                    if (Model.Page == i)
                    {
                            <li class="active"><a href="?page=@i&tagId=@tag.ID" data-toggle="tooltip" title="Trang @i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="?page=@i&tagId=@tag.ID" data-toggle="tooltip" title="Trang @i">@i</a></li>
                        }
                    }
                    @if (Model.Page < Model.TotalPages)
                {
                        <li>
                            <a href="?page=@(Model.Page+1)&tagId=@tag.ID" data-toggle="tooltip" title="Trang tiếp theo" aria-label="Next">
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </li>
                        <li>
                            <a href="?page=@Model.TotalPages&tagId=@tag.ID" data-toggle="tooltip" title="Trang cuối" aria-label="Last">
                                <i class="fa fa-angle-double-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }

    </div>
</div>
